{
  "name": "image-to-arduino-sprite-converter",
  "version": "1.0.0",
  "description": "Convert images to pixel art sprites and generate Arduino/ESP32 compatible code as a desktop application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-win": "electron-packager . ImageToArduinoSpriteConverter --platform=win32 --arch=x64 --out=dist --overwrite"
  },
  "keywords": ["arduino", "sprite", "image", "converter", "electron"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-packager": "^17.1.0"
  }
}